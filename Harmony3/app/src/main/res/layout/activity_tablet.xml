<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.felipe.harmony3.TabletActivity">

    <Button
        android:id="@+id/inhale_button"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:text="@string/Inhale"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/exhale_button"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:text="@string/Exhale"
        android:layout_alignTop="@+id/inhale_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/inhale_button"
        android:layout_alignLeft="@+id/inhale_button"
        android:layout_alignStart="@+id/inhale_button"
        android:weightSum="1">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:textOn="Square Effect On"
            android:textOff="Square Effect Off"
            android:id="@+id/SquareButton" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:textOn="Sawtooth Effect On"
            android:textOff="Sawtooth Effect Off"
            android:id="@+id/SawtoothButton" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:textOn="Tringle Effect On"
            android:textOff="Triangle Effect Off"
            android:id="@+id/TriangleButton" />

    </LinearLayout>


</RelativeLayout>
