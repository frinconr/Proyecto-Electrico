<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background1"
    android:id="@+id/PhoneRelativeLayout"
    android:clickable="false"
    android:focusable="false">

        <Button
            android:id="@+id/first_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/abc_action_button_min_width_material"
            android:gravity="center" />

        <Button
            android:id="@+id/sixth_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="6" />

        <Button
            android:id="@+id/second_button"
            android:layout_below="@+id/first_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="2" />

        <Button
            android:id="@+id/seventh_button"
            android:layout_below="@+id/sixth_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="7" />

        <Button
            android:id="@+id/third_button"
            android:layout_below="@+id/second_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="3" />

        <Button
            android:id="@+id/eighth_button"
            android:layout_below="@+id/seventh_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="8" />

        <Button
            android:id="@+id/fourth_button"
            android:layout_below="@+id/third_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="4" />

        <Button
            android:id="@+id/nineth_button"
            android:layout_below="@+id/eighth_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="9" />

        <Button
            android:id="@+id/fifth_button"
            android:layout_below="@+id/fourth_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="5" />

        <Button
            android:id="@+id/tenth_button"
            android:layout_below="@+id/nineth_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="10" />



</RelativeLayout>
